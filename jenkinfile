pipeline {
    agent any
    stages {
        stage('Build Angular App') {
            steps {
                sh 'npm install'
                sh 'ng build --prod'
            }
        }
        stage('Dockerize Angular App') {
            steps {
                sh 'docker build -t cain420/labphase1/angular-app .'
                sh 'docker push cain420/labphase1/angular-app'
            }
        }
    }
}

