pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']],
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/Cain430/lab.git']]])
            }
        }
        stage('Docker Build') {
            steps {
                script {
                    def dockerCmd = 'docker build -t cain420/labphase1:latest .'
                    sh "sudo -E -u root ${dockerCmd}"
                }
            }
        }
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'your-docker-hub-credentials-id', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                    script {
                        def dockerLoginCmd = "docker login -u ${DOCKER_USERNAME} -p ${DOCKER_PASSWORD}"
                        sh "sudo -E -u root ${dockerLoginCmd}"
                    }
                }
            }
        }
        stage('Docker Push') {
            steps {
                script {
                    def dockerPushCmd = 'docker push cain420/labphase1:latest'
                    sh "sudo -E -u root ${dockerPushCmd}"
                }
            }
        }
    }
    post {
        success {
            echo 'Success: Docker image pushed to Docker Hub'
        }
    }
}
