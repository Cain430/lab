pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']],
                          extensions: [],
                          userRemoteConfigs: [[url: 'https://github.com/Cain430/lab.git']]])
            }
        }
        stage('Docker Build') {
            steps {
                sh 'docker build -t cain420/labphase1:latest .'
            }
        }
        stage('Docker Login') {
            steps {
                withCredentials([usernamePassword(credentialsId: '4f1fc754-92f4-4039-be95-a388a1e0a426', usernameVariable: 'dockerHubUser', passwordVariable: 'dockerHubPassword')]) {
                    sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                }
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push cain420/labphase1:latest'
            }
        }
    }
    post {
        success {
            echo 'Success: Docker image pushed to Docker Hub'
        }
    }
}
